<!--pages/detail/detailComponets/dw-swiper.wxml-->
<swiper class="swiper" 
        indicator-active-color="#ff5777" 
        autoplay='true' 
        circular='true' 
        interval='3000' 
        indicator-dots="true">
  <block wx:for="{{images}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image class="swiper-image" src="{{item}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>