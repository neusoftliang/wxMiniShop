/* componets/w-tab-control/w-tab-contol.wxss */
.w-tab-control{
  display: flex;
  margin-top: 16rpx;
}
.tab-item{
  flex: 1;
  text-align: center;
  padding-top: 20rpx;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
}
.tab-item.active text{
  padding: 16rpx 10rpx;
  border-bottom: 6rpx solid #ff5777;
}
.active{
  color: #ff5777;
}